{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

       
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_gestion_user_show', {'id': user.id}) }}" class="btn btn-info">Show</a> {# Utilisation de la classe Bootstrap "btn-info" pour la couleur bleue #}
                    <a href="{{ path('app_gestion_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a> {# Utilisation de la classe Bootstrap "btn-warning" pour la couleur jaune #}
                    <a href="{{ path('app_gestion_user_delete', {'id': user.id}) }}" class="btn btn-danger">Delete</a> {# Utilisation de la classe Bootstrap "btn-danger" pour la couleur rouge #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestion_user_new') }}" class="btn btn-success">Create New</a>
{% endblock %}
