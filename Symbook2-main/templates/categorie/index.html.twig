{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block body %}
    <h1>Liste des Catégories</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Libellé</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.libelle }}</td>
                    <td>{{ categorie.slug }}</td>
                    <td>{{ categorie.description }}</td>
                    <td>
                        <a href="{{ path('admin_categorie_update', { id: categorie.id }) }}" class="btn btn-primary btn-sm">Modifier</a>
                        <a href="{{ path('admin_categorie_delete', { id: categorie.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_categorie_create') }}" class="btn btn-success btn-sm">Ajouter une nouvelle catégorie</a>
{% endblock %}
